<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag sessions_path do %>
      
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>
    
      <%= check_box_tag :remember_me, 1, params[:remember_me], id: "session_remember_me" %>
      <%= label_tag :remember_me %>
    

      <%= submit_tag "Log in"%>
    <% end %>
  </div>
</div>