<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

    <h1>Login</h1>

    <%= form_tag user_sessions_path, :method => :post, class: "form-horizontal" do %>
      <div class="form-group">
        <div class="col-sm-12">
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          <%= label_tag :remember_me %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= submit_tag "Login", class: "btn btn btn-primary btn-block" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= link_to "Forgot Password?", new_password_reset_path %>
        </div>
      </div>
    <% end %>

  </div>
</div>

