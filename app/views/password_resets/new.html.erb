<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

  <h1>Forgot Password?</h1>

  <%= form_tag password_resets_path, :method => :post, class: "form-horizontal" do %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= submit_tag "Reset my password!", class: "btn btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>

  </div>
</div>

