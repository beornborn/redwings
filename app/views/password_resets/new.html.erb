<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag password_resets_path, :method => :post do %>
      <div class="field">
        <%= label_tag :email %><br/>
        <%= text_field_tag :email, params[:email], class: "form-control" %> 
        <%= submit_tag "Reset my password!", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>